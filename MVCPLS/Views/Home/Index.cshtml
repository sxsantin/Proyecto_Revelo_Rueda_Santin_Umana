@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #e9ecef;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            background-color: #ffffff;
        }

        .card-header {
            background-color: #28a745;
            color: white;
            font-size: 1.5rem;
            text-align: center;
            padding: 1rem;
        }

        .btn-custom {
            background-color: #28a745;
            color: white;
        }

            .btn-custom:hover {
                background-color: #218838;
            }

        .btn-secondary-custom {
            background-color: #6c757d;
            color: white;
        }

            .btn-secondary-custom:hover {
                background-color: #5a6268;
            }

        .card-container {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .error-message {
            color: #dc3545; /* Color rojo para el mensaje de error */
            font-weight: bold;
        }
    </style>
</head>
<body>

    <header class="bg-success text-white py-4">
        <div class="container text-center">
            <h1 class="fw-bold">PROYECTO</h1>
            <p class="mb-0">Aplicaciones Distribuidas</p>
            <p class="mb-0">Revelo - Rueda - Santin - Umaña</p>
            <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-danger">Cerrar sesión</a>
        </div>
    </header>

    <div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">

        <div class="card-container">

            <!-- Card para buscar producto -->
            <div class="card p-4" style="width: 350px;">
                <div class="card-header">
                    <i class="fas fa-search"></i> Buscar Producto
                </div>
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    <input type="hidden" name="searchType" value="product" />
                    <div class="mb-3">
                        <label for="productId" class="form-label">ID de Producto:</label>
                        <input type="text" name="id" class="form-control" id="productId" required />
                        <div class="invalid-feedback">
                            Por favor ingresa un ID de producto.
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-custom" id="searchBtn" disabled>Buscar</button>
                    </div>
                }
                <div class="d-grid mt-3">
                    <a href="@Url.Action("CUD", "Home")" class="btn btn-secondary-custom">CRUD Productos</a>
                </div>
            </div>


            <!-- Card para buscar categoría -->
            <div class="card p-4" style="width: 350px;">
                <div class="card-header">
                    <i class="fas fa-search"></i> Buscar Categoría
                </div>
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    <input type="hidden" name="searchType" value="category" />
                    <div class="mb-3">
                        <label for="categoryId" class="form-label">ID de Categoría:</label>
                        <input type="text" name="id" class="form-control" id="categoryId" required />
                        <div class="invalid-feedback">
                            Por favor ingresa un ID de categoría.
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-custom" id="searchCategoryBtn" disabled>Buscar</button>
                    </div>
                }
                <div class="d-grid mt-3">
                    <a href="@Url.Action("CategoryCUD", "Home")" class="btn btn-secondary-custom">CRUD Categorías</a>
                </div>
            </div>


        </div>

        <!-- Mensaje de error -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-4 text-center error-message">@ViewBag.ErrorMessage</div>
        }
    </div>

    <!-- Enlace a Bootstrap JS y Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Habilitar botón de búsqueda si el campo no está vacío
        document.getElementById("productId").addEventListener("input", function () {
            const searchBtn = document.getElementById("searchBtn");
            searchBtn.disabled = !this.value.trim();
        });

        document.getElementById("categoryId").addEventListener("input", function () {
            const searchCategoryBtn = document.getElementById("searchCategoryBtn");
            searchCategoryBtn.disabled = !this.value.trim();
        });
    </script>
</body>
</html>
