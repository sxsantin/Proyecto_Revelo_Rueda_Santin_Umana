@model Entities.Categories

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@(Model.CategoryID == 0 ? "Crear Categoría" : "Editar Categoría")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .header {
            background-color: #28a745;
            color: white;
        }

        .btn-primary-custom {
            background-color: #28a745;
            color: white;
            border-radius: 20px;
            transition: background-color 0.3s;
        }

            .btn-primary-custom:hover {
                background-color: #218838;
            }

        .btn-warning-custom {
            background-color: #ffc107;
            color: black;
            border-radius: 20px;
            transition: background-color 0.3s;
        }

        .btn-danger-custom {
            background-color: #dc3545;
            color: white;
            border-radius: 20px;
            transition: background-color 0.3s;
        }

        .btn-outline-secondary {
            color: #6c757d;
            border-radius: 20px;
        }
    </style>
</head>
<body>

    <header class="header py-3">
        <div class="container text-center">
            <h1 class="fw-bold">PROYECTO</h1>
            <p class="mb-0">Aplicaciones Distribuidas</p>
            <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-danger">Cerrar sesión</a>
        </div>
    </header>

    <div class="container mt-5">
        <h1 class="text-center mb-4">@(Model.CategoryID == 0 ? "Crear Categoría" : "Editar Categoría")</h1>

        @using (Html.BeginForm("CategoryCUD", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="mb-2">
                <label for="CategoryID" class="form-label">ID:</label>
                @if (Model.CategoryID == 0)
                {
                    <input type="text" name="CategoryID" class="form-control form-control-sm" id="CategoryID" />
                }
                else
                {
                    <span>@Model.CategoryID</span>
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                }
            </div>

            <div class="mb-2">
                <label for="CategoryName" class="form-label">Nombre de Categoría:</label>
                <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control form-control-sm" id="CategoryName" />
            </div>

            <div class="mb-2">
                <label for="Description" class="form-label">Descripción:</label>
                <input type="text" name="Description" value="@Model.Description" class="form-control form-control-sm" id="Description" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" name="CreateBtn" value="Create" class="btn btn-primary-custom btn-sm">
                    <i class="fas fa-plus"></i> Crear
                </button>
                <button type="submit" name="UpdateBtn" value="Update" class="btn btn-warning-custom btn-sm">
                    <i class="fas fa-edit"></i> Actualizar
                </button>
                <button type="submit" name="DeleteBtn" value="Delete" class="btn btn-danger-custom btn-sm">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.SuccessMessage</div>
        }

        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> INICIO
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
