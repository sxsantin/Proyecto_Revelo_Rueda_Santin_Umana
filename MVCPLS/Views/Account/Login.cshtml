@{
    Layout = null;
    ViewData["Title"] = "Inicio de Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #e9ecef;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            background-color: #ffffff;
        }

        .header {
            background-color: #28a745;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        .btn-custom {
            background-color: #28a745;
            color: white;
        }

            .btn-custom:hover {
                background-color: #218838;
            }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
        }

        .error-message {
            color: #dc3545; /* Color rojo para el mensaje de error */
            font-weight: bold;
        }
    </style>
</head>
<body>

    <header class="header">
        <h1 class="fw-bold">Iniciar Sesión</h1>
        <p class="mb-0">Aplicaciones Distribuidas</p>
    </header>

    <div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg p-4" style="width: 400px;">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                <div class="mb-3">
                    <label for="Username" class="form-label text-secondary">Usuario:</label>
                    <input type="text" name="Username" class="form-control" id="Username" required />
                    <div class="invalid-feedback">
                        Por favor ingresa tu usuario.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label text-secondary">Contraseña:</label>
                    <input type="password" name="Password" class="form-control" id="Password" required />
                    <div class="invalid-feedback">
                        Por favor ingresa tu contraseña.
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-custom">
                        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                    </button>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-outline-secondary">
                        <i class="fas fa-user-plus"></i> Registrarse
                    </a>
                </div>
            }
        </div>

        <!-- Mensaje de error -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-4 text-center error-message">@ViewBag.ErrorMessage</div>
        }
    </div>

    <!-- Enlace a Bootstrap JS y Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
